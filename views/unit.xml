<odoo>
    <data>

        <record id="view_unit_tree" model="ir.ui.view">
            <field name="name">unit tree</field>
            <field name="model">management.unit</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="unit tree">
                    <field name="no_unit"/>
                    <field name="nama_unit"/>
                </tree>
            </field>
        </record>

        <record id="view_management_unit_form" model="ir.ui.view">
            <field name="name">unit form</field>
            <field name="model">management.unit</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="unit Form">
                    <sheet>
                        <div class="oe_title">
                            <label for="no_unit" class="oe_edit_only"
                                        string="No Unit"/>
                            <h1>
                                <field name="no_unit"/>
                            </h1>
                        </div>
                        <group>
                            <field name="nama_unit"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>